
@{
    ViewBag.Title = "Ronald Gualtero";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>Portal Accesos</h2>

<div class="row">
    <div class="danger">
        @ViewBag.Error
    </div>

    <form action="@Url.Content("~/Accesos/Login")" method="post">

        <div class="form-group">
            <label>Usuario:</label>
            <input type="email" name="Usuario" placeholder="Usuario" />
        </div>

        <div class="form-group">
            <label>Contraseña:</label>
            <input type="password" name="Contrasena" placeholder="Contrasena" />
        </div>

        <div class="form-group">
            <input type="submit" value="Ingresar" class="btn btn-success" />
        </div>
    </form> 
</div>
